{
	"manifest_version": 3,
	"name": "YT Freemium",
	"version": "0.7",
	"description": "Display lyrics for youtube by @uncannyRishabh",
	"host_permissions": [
		"https://www.bing.com/*",
		"https://www.youtube.com/*"
	],
	"permissions": [
		"tabs",
		"activeTab",
		"scripting",
		"storage",
		"webNavigation"
	],
	"action": {
		"default_title": "Youtube Freemium",
		"default_popup": "popup.html"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.youtube.com/*",
				"https://music.youtube.com/*"
			],
			"js": [
				"content.js"
			],
			"css":[
				"global.css"
			]
		}
	]
}