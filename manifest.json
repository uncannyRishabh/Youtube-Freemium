{
	"manifest_version": 3,
	"name": "Lyrics for Youtube",
	"version": "0.1",
	"description": "Display lyrics for youtube and youtube music by @uncannyRishabh",
	"host_permissions": [
		
	],
	"permissions": [
		"activeTab",
		"scripting",
		"storage"
	],
	"action": {
		"default_title": "Youtube Lyrics",
		"default_popup": "popup.html"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.youtube.com/*",
				"https://music.youtube.com/*"
			],
			"js": [
				"content.js"
			]
		}
	]
}